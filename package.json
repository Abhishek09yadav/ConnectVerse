{
  "name": "my-monorepo",
  "version": "1.0.0",
  "scripts": {
    "start": "npm-run-all --parallel frontend:start backend:start admin:start",
    "frontend:start": "npm run dev --prefix frontend",
    "backend:start": "npm run dev --prefix backend",
    "admin:start": "npm run dev --prefix admin",
    "bootstrap": "npm install && npm install --prefix frontend && npm install --prefix backend && npm install --prefix admin"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
